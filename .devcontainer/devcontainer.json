{
  "name": "Proyecto de Estadística 4",
  "image": "rocker/r-ver:4.4.1",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "RDebugger.r-debugger"
      ]
    }
  },

  // 1. Instala librerías del sistema como root (ANTES de todo)
  "onCreateCommand": "apt-get update && apt-get install -y libwebp-dev pandoc",

  // 2. Instala los paquetes de R necesarios
  "postCreateCommand": "chmod +x .scripts/*.sh && R -e \"install.packages(c('renv', 'languageserver'))\"",

  "forwardPorts": [8787],
  "portsAttributes": {
    "8787": {
      "label": "RStudio Server"
    }
  }
}
